<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="캐치프레이즈"
            android:id="@+id/catchphrase"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="김이름"
            android:id="@+id/name"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/catchphrase"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SS 엔터테인먼트"
            android:id="@+id/company"
            android:textSize="20dp"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="184cm"
            android:id="@+id/height"
            android:textSize="20dp"
            android:layout_below="@+id/company"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="4년"
            android:id="@+id/period"
            android:textSize="20dp"
            android:layout_below="@+id/height"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="으아아아아악"
            android:id="@+id/hobby"
            android:textSize="20dp"
            android:layout_below="@+id/period"
            android:layout_alignRight="@+id/period"
            android:layout_alignEnd="@+id/period"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="으아아아아아아아아악"
            android:id="@+id/talent"
            android:textSize="20dp"
            android:layout_below="@+id/hobby"
            android:layout_alignRight="@+id/catchphrase"
            android:layout_alignEnd="@+id/catchphrase"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="뭔가 할말이라도???"
            android:id="@+id/comment"
            android:textSize="20dp"
            android:layout_below="@+id/talent"
            android:layout_alignRight="@+id/catchphrase"
            android:layout_alignEnd="@+id/catchphrase"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="65위"
            android:id="@+id/rank"
            android:textSize="30dp"
            android:layout_below="@+id/mrank"
            android:layout_alignRight="@+id/catchphrase"
            android:layout_alignEnd="@+id/catchphrase"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="★★★★★"
            android:id="@+id/stars"
            android:textSize="30dp"
            android:layout_below="@+id/mstars"
            android:layout_alignRight="@+id/catchphrase"
            android:layout_alignEnd="@+id/catchphrase"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="순위"
            android:id="@+id/mrank"
            android:textSize="20dp"
            android:layout_below="@+id/comment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="평점"
            android:id="@+id/mstars"
            android:textSize="20dp"
            android:layout_below="@+id/rank"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</LinearLayout>